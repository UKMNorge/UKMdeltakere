{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
	{% for type_innslag in monstring.getInnslagTyper() %}
		<div class="innslagBlock col-xs-12">
			<div class="innslagTypeHeader">
				<a href="#" class="pull-right btn btn-xs btn-default">Legg til nytt innslag</a>
				
				<img src="{{ type_innslag.getIcon() }}" height="45" />
				<h3>{{ type_innslag }}</h3>
				<div class="clearfix"></div>
			</div>
			<ol class="list-group innslag_lister">
				{% for innslag in monstring.getInnslag().filterByStatus([7,6,5], monstring.getInnslag().filterByType( type_innslag, monstring.getInnslag().getAllUfullstendige() ) )  %}
					{% embed "list_item.html.twig" %}{% endembed %}
				{% else %}
					<li class="list-group-item">Ingen ufullstendige p√•meldinger i {{ type_innslag|lower }}</li>
				{% endfor %}
			</ol>
		</div>
	{% endfor %}
</div>
{% endblock %}