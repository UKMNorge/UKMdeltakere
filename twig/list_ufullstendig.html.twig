{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
	{% for type_innslag in monstring.getInnslagTyper() %}
		{% if monstring.getInnslag().filterbyStatus([7,6,5], monstring.getInnslag().filterByType( type_innslag, monstring.getInnslag().getAllUfullstendige() ) )|length > 0 %}
			<div class="innslagBlock col-xs-12">
				<div class="innslagTypeHeader">
					<a href="?page=UKMdeltakere&create=add-new-{{ type_innslag.getKey() }}#add-new-{{ type_innslag.getKey() }}" class="pull-right btn btn-xs btn-default">Legg til nytt innslag</a>
					
					<img src="{{ type_innslag.getIcon() }}" height="45" />
					<h3>{{ type_innslag }}</h3>
					<div class="clearfix"></div>
				</div>
				<ol class="list-group innslag_lister">
					{% for innslag in list_innslag[ type_innslag.getKey() ] %}
						{% embed "list_item.html.twig" %}{% endembed %}
					{% else %}
						<li class="list-group-item">Ingen ufullstendige påmeldinger i {{ type_innslag|lower }}</li>
					{% endfor %}
				</ol>
			</div>
		{% else %}
			{% set vis_kategori_info = true %}
		{% endif %}
	{% endfor %}
	<div class="col-xs-12">
		<p><span class="lead">Her vises kun kategorier som du har ikke-fullførte påmeldinger i.</span>
		<br />For å melde på nye innslag i de kategoriene som ikke vises her, gå til <a href="admin.php?page=UKMdeltakere">Påmeldte innslag</a> og velg "Legg til nytt innslag" over rett kategori.</p>
	</div>
</div>
{% endblock %}