{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
	{% for type_innslag in monstring.getInnslagTyper() %}
		<div class="innslagBlock col-xs-12">
			<div class="innslagTypeHeader">
				<a href="#" class="action pull-right btn btn-xs btn-success" data-action="nyttInnslag" data-type="{{ type_innslag.getKey() }}">Legg til nytt innslag</a>
				
				<img src="{{ type_innslag.getIcon() }}" height="45" />
				<h3>{{ type_innslag }}</h3>
				<div class="clearfix"></div>
			</div>
			<ol class="list-group" style="display: none;" id="newInnslagBox_{{ type_innslag.getKey() }}">
				<li class="list-group-item">
					<div class="body">
					</div>
				</li>
				<p>&nbsp;</p>
			</ol>
			<div class="clearfix"></div>

			<ol class="list-group innslag_lister" id="innslag_liste_{{ type_innslag.getKey() }}">
				{% for innslag in monstring.getInnslag().getAllByType( type_innslag ) %}
					{% embed "list_item.html.twig" %}{% endembed %}
				{% else %}
					<li class="list-group-item">Ingen p√•meldte i {{ type_innslag }}</li>
				{% endfor %}
			</ol>
		</div>
	{% endfor %}
	{# Legg til tomrom i bunn: #}
	{% for i in 0..14 %}
		<p>&nbsp;</p>
	{% endfor %}

</div>
{% endblock %}