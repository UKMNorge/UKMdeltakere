{% block content %}
<script type="text/javascript">
	var allergener_kulturelle = '{{ allergener_kulturelle|json_encode|raw}}';
	var allergener_standard = '{{ allergener_standard|json_encode|raw }}';
</script>


<h1>Allergier og intoleranser</h1>
<fieldset>
	
	<div class="row mt-3">
		<div class="col-xs-12 col-md-4">
			<h3>Legg til for en ny person</h3>
			<select id="intoleranse_ny" class="form-control" style="min-width: 220px">
				<option value="false" selected disabled>Velg person</option>
				{% for person in personer.uten %}
					<option value="{{ person.ID }}" data-mobil="{{person.mobil}}">{{ person.navn }}</option>
				{% endfor %}
			</select>
			<button class="btn btn-primary btn-sm" id="intoleranse_add" type="button">Legg til allergi/intoleranse</button>
		</div>
	
		<div class="col-xs-12 col-md-8">
			<h3>Registrerte allergier og intoleranser</h3>
			
			<ol class="list-group" id="intoleranser">
				{% for person in personer.med %}
					{% include "js/intoleranse_deltaker.html.twig" %}
				{% else %}
					<li class="list-group-item">Ingen registrerte allergier og intoleranser enda</li>
				{% endfor %}
			</ol>
		</div>
	</div>
</fieldset>
{% endblock %}