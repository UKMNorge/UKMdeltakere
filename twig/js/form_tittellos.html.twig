<form action="tittellos">
	<div class="row">
		<div class="col-xs-12">
			<h4 style="margin-bottom: 0px;">Rediger informasjon</h4>
			<p>Røde felt (merket *) er obligatoriske!</p>
		</div>
		
		<div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="form-group text-danger">
				<label for="fornavn">Fornavn *</label>
				<input name="fornavn" type="text" class="form-control" value="{{ person.fornavn }}" required />
			</div>
			<div class="form-group text-danger">
				<label for="etternavn">Etternavn *</label>
				<input name="etternavn" type="text" class="form-control" value="{{ person.etternavn }}" required />
			</div>
			
			<div class="form-group text-danger">
				<label for="alder">Alder *</label>
				<select name="alder" class="form-control delta-select" required>
					<option value=""{{ (person.alder_tall < 25) and (person.alder_tall > 9) and (person.alder_tall != '25+') ? '' : 'selected' }} disabled="disabled">Velg alder</option> 
					{% for i in 10..25 %}
						<option value="{{ i }}" {{ person.alder_tall == i ? 'selected' : '' }}>{{ i }} år</option> 
					{% endfor %}
					<option value="0"{{ person.alder_tall == '25+' or person.alder_tall >= 25 ? 'selected' : '' }}>Over 25 år</option>
				</select>
			</div>
	
		</div>
	
		
		<div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="form-group text-danger">
				<label>Mobil *</label>
				<input name="mobil" type="tel" class="form-control" value="{{ person.mobil }}" required />
			</div>
		
			<div class="form-group">
				<label>E-post</label>
				<input name="epost" type="text" class="form-control" value="{{ person.epost }}" />
			</div>
			
			{% if monstring.kommuner|length > 1  %}
				<div class="form-group text-danger">
					<label for="kommune">Kommune/bydel *</label>
					<select name="kommune" class="form-control" required>
						{% if nedslagsfelt == 'land' %}
							{% for fylke in fylker %}
								<optgroup label="{{ fylke.navn }}">
									{% for kommune in fylke.kommuner %}
										<option value="{{ kommune.id }}" {{ innslag.kommune_id == kommune.id ? 'selected' : '' }}>{{ kommune.navn }}</option>
									{% endfor %}
								</optgroup>
							{% endfor %}
						{% else %}
							{% for id, navn in monstring.kommuner %}
								<option value="{{ id }}" {{ innslag.kommune_id == id ? 'selected="selected"' : '' }}>{{ navn }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
			{% else %}
				<input type="hidden" name="kommune" value="{{ innslag.kommune_id }}" />
			{% endif %}
		
		</div>
		
        {% if type.harBeskrivelse %}
            <div class="col-xs-12 col-sm-6 col-lg-4">
                <div class="form-group">
                    <label>Erfaring</label>
                    <textarea name="erfaring" class="form-control">{{ erfaring }}</textarea>
                </div>
            </div>	
        {% endif %}
	
		{% if innslag.type.harFunksjoner %}
			<div class="col-xs-12 col-sm-6 col-lg-4">
				<label>Funksjon / rolle / oppgave</label>
				<ul class="list-group">
					{% for funksjon in funksjoner %}
						<label class="list-group-item click" for="funksjon_{{ funksjon }}">
							<input type="checkbox" class="funksjon" name="funksjoner[]" value="{{ funksjon }}" {% if funksjon in person.valgte_funksjoner %} checked="checked"{% endif %} id="funksjon_{{ funksjon }}" /> &nbsp; {{ funksjonsnavn[funksjon] }}
						</label>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
	</div>

	<div class="col-xs-12 row" style="margin-top: 20px;">
		<div class="col-xs-12 col-sm-6">
			<div class="row">
				<h4>Intoleranser og allergier</h3>			
				<div>						
					<ul class="intoleranser-ul">
						<li class="har-allergi-intoleranse list-group-item">
							<div class="beskrivelse">
								<h5>Har allergi / intoleranse</h5>
							</div>
							<div class="har-valg">
								<div class="btn btn-default btn-sm {{ person.intoleranse_liste == null and person.intoleranse_human|length < 1 ? '' : 'btn-primary selected' }}" funksjon="ja">Ja</div>
								<div class="btn btn-default btn-sm {{ person.intoleranse_liste == null and person.intoleranse_human|length < 1 ? 'btn-primary selected' : '' }}" funksjon="nei">Nei</div>
							</div>
						</li>
						{# TEMPLATE start #}
						<li class="person clickable single {{ person.intoleranse_liste == null and person.intoleranse_human|length < 1 ? 'hide' : '' }} list-group-item" id="{{ person.id }}" data-id="{{ person.id }}">
							<div class="row header-person">
								<div class="col-xs-12">
									<span class="type strong"></span>
									<span class="navn">
										{{ person.navn }}
										<small class="text-muted"><span class="dashicons dashicons-smartphone" style="font-size:1.2em;padding-top:.4em;"></span>
										<span class="UKMmobil UKMSMS" data-navn="{{person.navn}}" data-to="{{person.mobil}}">{{person.mobil}}</span>
										</small>
									</span>
								</div>
							</div>
							<div id="personKontroll{{ innslag.id }}{{ person.id }}" class="data row in">
								<div class="col-xs-4">
									<div class="form-group">
										<table class="intoleranser table-condensed table-striped" style="width:99%">
											{% for allergen in allergener_kulturelle %}
												<tr>
													<td>
														<label>
															<input type="checkbox" name="allergen" value="{{ allergen.id }}" {% if allergen.id in person.intoleranse_liste %}checked{% endif %} />
															{{ allergen.navn }}
														</label>
													</td>
												</tr>
											{% endfor %}
										</table>
									</div>
								</div>
								<div class="col-xs-8 col-md-4">
									<div class="form-group">
										<table class="intoleranser table-condensed table-striped" style="width:99%">
											{% for allergen in allergener_standard %}
												<tr>
													<td>
														<label>
															<input type="checkbox" name="allergen" value="{{ allergen.id }}" {% if allergen.id in person.intoleranse_liste %}checked{% endif %} />
															{{ allergen.navn }}
														</label>
													</td>
												</tr>
											{% endfor %}
										</table>
									</div>
								</div>
								<div class="col-xs-12">
									<label>Tilleggsinformasjon</label>
									<textarea class="form-control intoleranse_tekst" rows="3">{{ person.intoleranse.intoleranse_tekst }}</textarea>
								</div>
							
							</div>
						</li>

						{# TEMPLATE end #}
					</ul>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 arrangor-kommentarer">
			<h4>Arrangør-kommentarer</h4>
			<p>Kommentarer vil være tilgjengelig som eget valg når du henter ut rapporter, men publiseres ikke noe sted på ukm.no. Pass derfor på hva du noterer / hva du tar ut i rapporter.</p>
			<textarea style="width: 100%; height: 100px;"></textarea>
			<button style="float: right; margin-top: 15px;" type="button" class="btn btn-ukm btn-sm btn-success">Lagre kommentar</button>
		</div>
	</div>

	<div class="clearfix"></div>
	<p>&nbsp;</p>


	
	<div class="clearfix"></div>
	<button onclick="tittellosBeforeSubmit(event)" class="action btn btn-success" person-id="{{ person.id }}" data-action="save">Lagre</button>
	&nbsp; &nbsp; eller 
	<a href="#innslag_{{ innslag_id }}" class="innslagResetAndReloadBody" data-innslag-id="{{ innslag_id }}">avbryt</a>
	
	<div class="clearfix"></div>
</form>